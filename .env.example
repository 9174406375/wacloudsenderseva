# ================================================
# WA CLOUD SENDER SEVA - ENVIRONMENT CONFIG
# Copy this to .env and update values
# ================================================

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wacloud
# For Railway, use: mongodb+srv://username:password@cluster.mongodb.net/wacloud

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123
ADMIN_WHATSAPP=919174406375

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# WhatsApp Configuration
SESSION_DIR=./sessions
AUTO_RECONNECT=true

# Anti-Ban Settings
DEFAULT_MIN_DELAY=3
DEFAULT_MAX_DELAY=10
DEFAULT_BATCH_SIZE=20
DEFAULT_COOLDOWN=60

# Book Order Configuration
BOOK_TITLE_HINDI=ज्ञान गंगा - संत रामपाल जी महाराज
BOOK_TITLE_ENGLISH=Gyan Ganga - Sant Rampal Ji Maharaj
DELIVERY_DAYS=30
MAX_BOOKS_PER_ORDER=5

# External API Keys (Optional)
PINCODE_API_KEY=
WHATSAPP_API_TOKEN=

# Railway Specific (Auto-configured on Railway)
# RAILWAY_STATIC_URL=
# RAILWAY_PROJECT_ID=
# RAILWAY_ENVIRONMENT=

# Logging
LOG_FILE=./logs/app.log
ERROR_LOG=./logs/error.log
